    <!--Bean that is used for mapping communities/collections to certain discovery configurations.-->
    <bean id="org.dspace.discovery.configuration.DiscoveryConfigurationService" class="org.dspace.discovery.configuration.DiscoveryConfigurationService">
        <property name="map">
            <map>
                <!--The map containing all the settings,
                    the key is used to refer to the page (the "site" or a community/collection handle)
                    the value-ref is a reference to an identifier of the DiscoveryConfiguration format
                    -->
                <!--The default entry, DO NOT REMOVE the system requires this-->
               <entry key="default" value-ref="defaultConfiguration" />

               <!--Use site to override the default configuration for the home page & default discovery page-->
               <entry key="site" value-ref="homepageConfiguration" />
               <!--<entry key="123456789/7621" value-ref="defaultConfiguration"/>-->

               <!--Community-->
               <entry key="COMMUNITY" value-ref="communityConfiguration" />
            </map>
        </property>
        <!-- ignore those database metadata fields when indexing -->
        <property name="toIgnoreMetadataFields">
            <map>
                <entry>
                    <key><util:constant static-field="org.dspace.core.Constants.COMMUNITY"/></key>
                    <list>
                        <!--Copyright text-->
                        <value>dc.rights</value>
                        <!--value>rtbf.royalty_code</value-->
                    </list>
                </entry>
                <entry>
                    <key><util:constant static-field="org.dspace.core.Constants.COLLECTION"/></key>
                    <list>
                        <!--Copyright text-->
                        <value>dc.rights</value>
                        <!--value>rtbf.royalty_code</value-->
                    </list>
                </entry>
                <entry>
                    <key><util:constant static-field="org.dspace.core.Constants.ITEM"/></key>
                    <list>
                        <!--Copyright text-->
                        <value>dc.rights</value>
                    </list>
                </entry>
            </map>
        </property>
        <!-- include in catch all field those database metadata fields when indexing -->
        <property name="toCatchAllMetadataFields">
            <map>
                <entry>
                    <key><util:constant static-field="org.dspace.core.Constants.COMMUNITY"/></key>
                    <list>
                        <value>search.uniqueid</value>
                        <value>handle</value>
                        <value>rtbf.identifier.id</value>
                        <value>dc.title</value>
                        <value>rtbf.title.subtitle</value>
                        <value>dc.description.abstract</value>
                        <value>dc.description.summary</value>
                        <value>dc.contributor.author</value>
                        <value>rtbf.contributor_plus_role</value>
                        <value>rtbf.royalty_remark</value>
                        <value>rtbf.production_type</value>
                    </list>
                </entry>
                <entry>
                    <key><util:constant static-field="org.dspace.core.Constants.COLLECTION"/></key>
                    <list>
                        <value>search.uniqueid</value>
                        <value>handle</value>
                        <value>rtbf.identifier.id</value>
                        <value>dc.title</value>
                        <value>rtbf.title.subtitle</value>
                        <value>dc.description.abstract</value>
                        <value>dc.description.sumshort</value>
                        <value>dc.description.sumpress</value>
                        <value>dc.description.summary</value>
                        <value>dc.description.summaryview</value>
                        <value>dc.description.summaryitw</value>
                        <value>dc.description.summarynrcs</value>
                        <value>dc.description.summarycatalog</value>
                        <value>dc.contributor.author</value>
                        <value>rtbf.contributor_plus_role</value>
                        <value>rtbf.royalty_remark</value>
                        <value>rtbf.production_type</value>
                        <value>rtbf.version_type</value>
                        <value>rtbf.matter</value>
                        <value>rtbf.place</value>
                        <value>rtbf.rtbf_id</value>
                    </list>
                </entry>
                <entry>
                    <key><util:constant static-field="org.dspace.core.Constants.ITEM"/></key>
                    <list>
                        <value>search.uniqueid</value>
                        <value>handle</value>
                        <value>rtbf.identifier.id</value>
                        <value>dc.title</value>
                        <value>rtbf.title.subtitle</value>
                        <value>dc.description.abstract</value>
                        <value>dc.description.sumshort</value>
                        <value>dc.description.sumpress</value>
                        <value>dc.description.summary</value>
                        <value>dc.description.summaryview</value>
                        <value>dc.description.summaryitw</value>
                        <value>dc.description.summarynrcs</value>
