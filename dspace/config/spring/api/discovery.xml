            </list>
        </property>
        <property name="searchFilters">
            <list>
                <ref bean="searchFilterIdAttributor" />
                <ref bean="searchFilterSerieTitle" />
                <ref bean="searchFilterTitleCommunity" />
                <ref bean="searchFilterRoyalty" />
                <ref bean="searchFilterProductionType" />
            </list>
        </property>
        <property name="searchSortConfiguration">
            <bean class="org.dspace.discovery.configuration.DiscoverySortConfiguration">
                <!--<property name="defaultSort" ref="sortDateIssued"/>-->
                <!--DefaultSortOrder can either be desc or asc (desc is default)-->
                <property name="defaultSortOrder" value="desc"/>
                <property name="sortFields">
                    <list>
                        <ref bean="sortTitle" />
                        <ref bean="sortTitleCommunity" />
